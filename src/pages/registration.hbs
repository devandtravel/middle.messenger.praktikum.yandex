---
firstName: first_name
secondName: second_name
login: login
email: email
password: password
phone: phone
---
<h1>
  Registration
</h1>
<form>
  <label for={{email}}>
    Email
  </label>
  <input type="email" name={{email}} required />
  <p class="input-validation-result">
    Enter valid email
  </p>
  <label for={{login}}>
    Login
  </label>
  <input type="text" name={{login}} required minlength="4" maxlength="20" />
  <p class="input-validation-result">
    Login must be from 4 to 20 characters
  </p>
  <label for={{firstName}}>
    First name
  </label>
  <input type="text" name={{firstName}} required />
  <label for={{secondName}}>
    Second name
  </label>
  <input type="text" name={{secondName}} required />
  <label for={{phone}}>
    Phone
  </label>
  <input type="tel" name={{phone}} required />
  <p class="input-validation-result">
    Phone number must be 11 numbers long
  </p>
  <label for={{password}}>
    Password
  </label>
  <input
    type="password"
    name={{password}}
    required
    minlength="8"
    maxlength="20"
  />
  <label for={{password}}>
    Password (one more time)
  </label>
  <input
    type="password"
    name={{password}}
    required
    minlength="8"
    maxlength="20"
  />
  <p class="input-validation-result">
    The passwords don't match
  </p>
  <button>
    Sign up
  </button>
  <button>
    Нет аккаунта?
  </button>
</form>